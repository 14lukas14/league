{% extends "LizukUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error|trans({}, 'LizukUserBundle') }}</div>
    {% endif %}

    <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group col-xs-12">
            <label class="col-xs-3 control-label" for="username">{{ 'security.login.username'|trans({}, 'LizukUserBundle') }}</label>
            <div class="col-xs-5">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>

        <div class="form-group col-xs-12">
            <label class="col-xs-3 control-label" for="password">{{ 'security.login.password'|trans({}, 'LizukUserBundle') }}</label>
            <div class="col-xs-5">
                <input class="form-control" type="password" id="password" name="_password" required="required" />
            </div>
        </div>

        {#<div class="form-group">
            <input class="form-control" type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label class="col-xs-3 control-label" for="remember_me">{{ 'security.login.remember_me'|trans({}, 'LizukUserBundle') }}</label>
        </div>#}
        <div class="form-group col-xs-12">
            <div class="col-xs-offset-3 col-xs-4">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans({}, 'LizukUserBundle') }}
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group col-xs-12">
            <div class="col-xs-offset-3 col-xs-4">
                <button class="btn btn-primary" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans({}, 'LizukUserBundle') }}</button>
            </div>
        </div>
    </form>
{% endblock fos_user_content %}